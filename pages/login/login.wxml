<!--pages/login/login.wxml-->
<view class='custom-navbar'>
  <view class='palce-holder-nav' style="height: {{navbarData.navHeight}}px;"></view>
  <van-row class='main-navbar' style="height: {{2.2*navbarData.navHeight}}px;line-height: {{2.2*navbarData.navHeight}}px">
    <van-col span="4" class="back-word" bind:tap="backWordHandler">
    {{navbarData.backWord}}</van-col>
    <van-col span="8" offset="4" class="page-title">{{navbarData.pageTitle}}</van-col>
  </van-row>
</view>

<van-cell-group>
  <van-field
  label="账号"
    value="{{ username }}"
    placeholder="请输入手机号码"
    border="{{ true }}"
    bind:change="onChange"
  />
  <van-field
    value="{{ password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    border="{{ true }}"
  />
</van-cell-group>

