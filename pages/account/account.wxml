<!--pages/account/account.wxml-->
<view class="" style="background: linear-gradient(to right, #ffcc00, #ff6600);width:100%;height: {{3.2*navbarData.navHeight}}px; position: fixed;">
  <view class='custom-navbar'>
    <view class='palce-holder-nav' style="height: {{navbarData.navHeight}}px;"></view>
    <van-row class='main-navbar' style="height: {{2.2*navbarData.navHeight}}px;line-height: {{2.2*navbarData.navHeight}}px">
    <van-col span="4" class="back-word">
      <text bind:tap="backHandler" style="width: 80rpx; height:56rpx; vertical-align:0%;" class="fa fa-angle-left fa-lg"></text>
    </van-col>
      <van-col span="8" offset="4" class="page-title">
      {{navbarData.pageTitle}}</van-col>
    </van-row>
  </view>
</view>
<view style="width:100%;height: {{3.2*navbarData.navHeight}}px;"></view>

<block wx:if="{{modifyType === 0}}">
<van-cell-group>
  <van-cell title="修改密码" is-link="true" bind:tap="changePassword" />
  <van-cell title="换绑手机" is-link="true" placeholder="{{phone}}" bind:tap="changePhone" />
</van-cell-group>
</block>

<block wx:if="{{modifyType === 1}}">
<van-cell-group>
  <van-field value="{{ oldPassword }}" type="password" placeholder="请输入旧密码" border="{{ ture }}" bind:change="onOldPasswordChange" />
  <van-field value="{{ newPassword }}" type="password" placeholder="请输入新密码" border="{{true}}" bind:change="onNewPasswordChange" />
  <van-field value="{{ reTypePassword }}" type="password" placeholder="请再次输入新密码" border="{{true}}" bind:change="onRetypePasswordChange" />
</van-cell-group>
</block>

<block wx:if="{{modifyType === 2}}">
<van-cell-group>
  <van-field value="{{ userName }}" placeholder="请输入用户名" border="{{ false }}" bind:change="onChange" />
  <van-field value="{{ verificationCode }}" type="number" label="验证码" placeholder="请输入验证码" border="{{ false }}" bind:change="onChangeVerificationCode">
  <van-button slot="button" size="mini" type="primary" style="height:48rpx;line-height: 48rpx;">验证码</van-button></van-field>
</van-cell-group>
</block>